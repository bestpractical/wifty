<%args>
$pages
$id
</%args>
<dl id="<%$id%>" class="pagelist">
% while (my $page = $pages->next) {
<dt><% Jifty->web->link( label => $page->name, url => '/view/'.$page->name)%></dt>
<dd><%$page->updated%>
% if($page->updated_by->id) {
  (<% $page->updated_by->name %>)
% } else {
  (Anonymous)
% }
</dd>
% }
</dl>
