      <h1 id="wikiname">
        <% Jifty->web->link( url => "/", label => _($wikiname) ) %>
      </h1>

      <% Jifty->web->navigation->render_as_menu %>
      <& /_elements/search_box &>
    </div>

    <div id="pageheader">
      <h1 id="pagename"><% _($title) %></h1>

      <% Jifty->web->page_navigation->render_as_menu %>
    </div>
